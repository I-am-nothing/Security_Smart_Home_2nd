<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/house_row"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:padding="10dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/house_row_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/surf"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/house_row_house_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOUSE1"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/house_row_image"/>

    <ImageView
        android:id="@+id/house_row_dragAnchor"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_round_menu_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>